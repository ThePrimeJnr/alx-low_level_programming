#include "main.h"

int _strlen (char *str)
{
	int i;

	i = 0;
	while (str[i] != '\0')
	{
		i++;
	}

	return (i);
}

char *string_nconcat(char *s1, char *s2, unsigned int n)
{
	char *str;
	unsigned int i;

	str = (char *)malloc(sizeof(_strlen(s1)) + n + 1);

	if (str == NULL)
		return (NULL);

	for (i = 0; i < _strlen(s1); i++)
	{
		str[i] = s1[i];
	}

	for (i = 0; i < n; i++)
	{
		str[_strlen(s1) + i] = s2[i];
	}

	return (str);
}
